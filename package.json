{
  "name": "ros2-robot-stack",
  "author": "Mayank <steeltroops.ai@gmail.com>",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  },
  "scripts": {
    "validate": "bun run typecheck && bun run lint",
    "typecheck": "cd apps/frontend && bun x tsc --noEmit && cd ../backend && bun x tsc --noEmit",
    "lint": "cd apps/frontend && bun run lint",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/frontend/**/*.{ts,tsx}": [
      "bun --cwd apps/frontend run lint --fix"
    ],
    "apps/backend/**/*.{ts,tsx}": [
      "bun --cwd apps/backend x tsc --noEmit"
    ]
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
